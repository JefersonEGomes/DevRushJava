package controle;

import java.util.Scanner;

public class Exercicio1 {
	/*Criar um programa que receba um número e verifique se ele está entre 0 e 10 e é par*/
	
	public static void main(String[] args) {
		Scanner leitor = new Scanner(System.in);
		
		System.out.println("Por favor digite um número: ");
		int i = leitor.nextInt();
		
		for (i = leitor.nextInt() ; i<= 10; i++) {
				if(i >= 0 && i<=10 && i %2 == 0){
					System.out.printf("O número %d está entre 0 e 10 e é par",i);
				}
				else if(i >= 0 && i<=10 && i %2 != 0){
					System.out.printf("O número %d está entre 0 e 10 mas não é par",i);
				}
				else if(i < 0 || i > 10 && i %2 != 0){
					System.out.printf("O número %d não está entre 0 e 10 mas não é par",i);
				}
				else if(i < 0 || i > 10 && i %2 == 0){
					System.out.printf("O número %d não está entre 0 e 10 mas é par",i);
				}else {
					System.out.println("Por favor digite um número válido");
				}
		leitor.close();
		
			
		}
	}
}
