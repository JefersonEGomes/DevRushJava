package fundamentos;

import javax.swing.JOptionPane;

public class ConversaoStringNumeroExercicio {
	public static void main(String[] args) {
		String valor1 = JOptionPane.showInputDialog("Digite aqui a sua primeira média semestral");
		String valor2 = JOptionPane.showInputDialog("Digite aqui a sua Segunda média semestral");
		
		double num1 = Double.parseDouble(valor1);
		double num2 = Double.parseDouble(valor2);
		
		double soma = num1 + num2;
		double media = soma/2;
		
		System.out.printf("Aqui está sua soma de semestres %.2f" + soma + "\n" );
		System.out.printf("Aqui está sua media anual %.2f" + media);
	}
}
