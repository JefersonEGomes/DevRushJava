package controle;

import java.util.Scanner;

public class DesafioWhile {
	public static void main(String[] args) {

		/*
		 * To/DO 1 - Criar scanner V 2 - Criar Variaveis do programa 3 - Criar while
		 * para verificar a nota e adicionar valor as variaveis 4 - registar a soma das
		 * notas digitadas 5 - registrar quantas notas foram digitas 6 - calular a média
		 * 7 - sair do programa se o usuario digitar -1
		 * 
		 */

		Scanner leitor = new Scanner(System.in);
		double nota = 0;
		double count = 0;
		double soma = 0;
		double media = 0;

		while (nota >= 0) {
			System.out.println("Por favor digite uma nota válida abaixo: ");
			nota = leitor.nextInt();
			count++;
			soma = soma + nota;

			System.out.println("contador " + count);
			System.out.println("soma " + soma);

			if (nota < 0) {

				System.out.println("Favor digitar uma nota válida");
				System.out.println("Por favor digite uma nota válida abaixo: ");
				nota = leitor.nextInt();

			}else {
				media = soma/count;
				System.out.println("Aqui está sua média: "+media);
			}

//			if(nota >= 0 ) {
//				System.out.println("Por favor digite uma nota válida abaixo: ");
//				nota = leitor.nextInt();
//				count++;
//				soma = soma + nota;
//				
//				
//				System.out.println("contador "+count);
//				System.out.println("soma " + soma);
//				
