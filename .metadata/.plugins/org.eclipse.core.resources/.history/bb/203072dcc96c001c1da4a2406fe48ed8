//			}else if (nota < 0 ) {
//				
//				System.out.println("Favor digitar uma nota válida");
//				System.out.println("Por favor digite uma nota válida abaixo: ");
//				nota = leitor.nextInt();
//				
//			}else {
//				
//				media = soma/count;
//				System.out.println("a"+media);
//				
//			}

		}
		
		

		leitor.close();

	}
}
